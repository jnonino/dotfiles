#!/usr/bin/env bash

#####################
# Functions for Linux
#####################
{{ if eq .chezmoi.os "linux" }}

set -eEuo pipefail

# Update and Upgrade
sudo apt-get update
sudo apt-get upgrade

# Instal system deps
sudo apt-get install -y build-essential procps curl file git

#####################################
# Install brew if it is not installed
#####################################
if ! command -v brew &> /dev/null
then
    echo "brew is not installed"
    bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi
eval "$($HOMEBREW_PREFIX/bin/brew shellenv)"

###################
# Brew dependencies
#   Install packages
#   Brewfile hash: {{ include ".files/Brewfile" | sha256sum }}
###################
brew update
brew bundle --verbose --debug --file {{ joinPath .chezmoi.sourceDir ".files/Brewfile" | quote }}
brew upgrade
brew autoremove
brew cleanup

###################
# Specific commands
###################
{{ if (.chezmoi.kernel.osrelease | lower | contains "microsoft") }} # WSL specific functions

{{ else }} # Not WSL specific functions

{{ end }}

{{ end }}
